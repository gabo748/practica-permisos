<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Botón para acceder a la ubicación -->
    <Button
        android:id="@+id/btnRequestLocation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Solicitar Permiso de Ubicación"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"/>

    <!-- Botón para mostrar ventana flotante -->
    <Button
        android:id="@+id/btnShowWindow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mostrar Ventana"
        android:layout_below="@id/btnRequestLocation"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>

    <!-- Botón para realizar una solicitud de red -->
    <Button
        android:id="@+id/btnDownload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Descargar Datos"
        android:layout_below="@id/btnShowWindow"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"/>
</RelativeLayout>